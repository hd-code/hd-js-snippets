{
  "name": "web-snippets",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "all": "run-s format check lint test coverage clear build minify",
    "build": "run-p build:css build:js",
    "build:css": "sass css/src:css/build --no-source-map",
    "build:js": "tsc",
    "check": "tsc --noEmit",
    "clear": "rm -rf js/build/*",
    "coverage": "nyc --extends @istanbuljs/nyc-config-typescript npm test -- -R dot",
    "format": "prettier --write css/src js/src",
    "lint": "eslint js/src",
    "minify": "for i in $(find ./js/build -name *.js); do uglifyjs $i -o $i -mc --comments '/^!/'; done;",
    "start": "npm run start:js",
    "start:css": "npm run build:css -- --watch",
    "start:js": "npm test -- --watch --watch-files js/src",
    "test": "mocha -r ts-node/register 'js/src/**/*.test.ts'"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^3.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "eslint": "^8.18.0",
    "mocha": "^9.2.2",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "prettier": "^2.7.1",
    "sass": "^1.53.0",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.4",
    "uglify-js": "^3.16.1"
  }
}
