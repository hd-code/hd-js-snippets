{
  "name": "typescript-snippets",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "coverage": "nyc --include 'snippets/**/*.ts' npm test -- -R dot",
    "coverage:ideas": "nyc --include 'ideas/**/*.ts' npm run test:ideas -- -R dot",
    "docs": "typedoc",
    "format": "prettier --write snippets",
    "format:ideas": "prettier --write ideas",
    "start": "run-s format docs test coverage",
    "start:ideas": "run-s format:ideas test:ideas coverage:ideas",
    "test": "ts-mocha 'snippets/**/*.test.ts'",
    "test:ideas": "ts-mocha 'ideas/**/*.test.ts'"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^3.4.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.11.3",
    "mocha": "^10.1.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "prettier": "^2.7.1",
    "ts-mocha": "^10.0.0",
    "typedoc": "^0.23.17",
    "typedoc-plugin-markdown": "^3.13.6",
    "typescript": "^4.8.4"
  }
}
