{
  "name": "js-snippets",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "npm run clear && tsc -p tsconfig.build.json && npm run minify",
    "clear": "rm -rf build/*",
    "deploy": "npm run lint && npm test && npm run build",
    "lint": "eslint src test",
    "lint-fix": "npm run lint -- --fix",
    "minify": "for i in $(find build -name *.js); do uglifyjs $i -o $i -mc --comments '/^!/'; done;",
    "start": "npm run deploy",
    "test": "mocha -r ts-node/register 'test/**/*.ts'"
  },
  "devDependencies": {
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.20",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "eslint": "^7.17.0",
    "mocha": "^8.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3",
    "uglify-es": "^3.3.9"
  }
}
