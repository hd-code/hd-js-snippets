{
  "name": "web-snippets",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "npm run clear && tsc -p tsconfig.build.json && npm run minify",
    "check": "tsc --noEmit",
    "clear": "rm -rf js/*",
    "deploy": "n='npm run'; $n format && $n check && $n lint && $n test && $n build",
    "format": "prettier --write src test",
    "lint": "eslint src test",
    "minify": "for i in $(find js -name *.js); do uglifyjs $i -o $i -mc --comments '/^!/'; done;",
    "start": "npm run deploy",
    "test": "mocha -r ts-node/register -r tsconfig-paths/register -p 'test/**/*.ts'"
  },
  "devDependencies": {
    "@types/mocha": "^9.0.0",
    "@types/node": "^14.17.34",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "eslint": "^8.3.0",
    "mocha": "^9.1.3",
    "prettier": "^2.5.0",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.5.2",
    "uglify-js": "^3.14.3"
  }
}
