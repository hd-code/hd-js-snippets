{
  "name": "hd-snippets-js",
  "version": "0.0.1",
  "private": true,
  "files": [
    "build"
  ],
  "scripts": {
    "build": "npm run clear && tsc && npm run minify",
    "clear": "rm -rf ./build",
    "minify": "for i in $(find build -name *.js); do uglifyjs $i -o $i -mc; done;",
    "start": "npm test",
    "test": "mocha -r ts-node/register 'test/**/*.ts'"
  },
  "devDependencies": {
    "@types/mocha": "^7.0.2",
    "@types/node": "^12.12.53",
    "mocha": "^7.2.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7",
    "uglify-es": "^3.3.9"
  }
}
