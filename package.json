{
  "name": "typescript-snippets",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "check": "tsc",
    "coverage": "nyc --include 'snippets/**/*.ts' npm test -- -R dot",
    "coverage:ideas": "nyc --include 'ideas/**/*.ts' npm run test:ideas -- -R dot",
    "docs": "typedoc",
    "format": "prettier --write snippets",
    "format:ideas": "prettier --write ideas",
    "start": "run-s format check docs test coverage",
    "start:ideas": "run-s format:ideas check test:ideas coverage:ideas",
    "test": "mocha 'snippets/**/*.test.ts'",
    "test:ideas": "mocha 'ideas/**/*.test.ts'"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@trivago/prettier-plugin-sort-imports": "^3.4.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.11.9",
    "mocha": "^10.1.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "typedoc": "^0.23.20",
    "typedoc-plugin-markdown": "^3.13.6",
    "typescript": "^4.8.4"
  },
  "prettier": {
    "importOrder": ["../", "./"],
    "importOrderSortSpecifiers": true,
    "importOrderGroupNamespaceSpecifiers": true,
    "trailingComma": "all"
  },
  "mocha": {
    "require": "ts-node/register"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true,
    "check-coverage": true
  }
}
