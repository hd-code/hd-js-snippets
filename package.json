{
  "name": "hd-snippets-js",
  "version": "1.0.0",
  "private": true,
  "files": [
    "build"
  ],
  "scripts": {
    "build": "npm run clear && tsc && npm run minify",
    "clear": "rm -rf ./build",
    "minify": "for i in $(find build -name *.js); do uglifyjs $i -o $i -mc --comments /^!/; done;",
    "start": "npm test",
    "test": "mocha -r ts-node/register 'test/**/*.ts'"
  },
  "devDependencies": {
    "@types/mocha": "^7.0.2",
    "@types/node": "^12.12.32",
    "mocha": "^7.1.1",
    "ts-node": "^8.8.1",
    "typescript": "^3.8.3",
    "uglify-js": "^3.8.1"
  }
}
